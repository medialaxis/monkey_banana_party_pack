#!/bin/bash

cmd=$1

if [[ "$cmd" != "init" ]]; then
    if pactl list cards | grep "Active Profile" | grep "output:iec958-stereo" > /dev/null; then
        pactl set-card-profile 1 output:analog-stereo
    else
        pactl set-card-profile 1 output:iec958-stereo
    fi
fi

if pactl list cards | grep "Active Profile" | grep "output:iec958-stereo" > /dev/null; then
    pacmd 'update-sink-proplist alsa_output.pci-0000_00_1b.0.iec958-stereo device.description="Headphones"'
else
    pacmd 'update-sink-proplist alsa_output.pci-0000_00_1b.0.analog-stereo device.description="Speakers"'
fi
